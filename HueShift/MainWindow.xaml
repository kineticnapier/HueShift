<Window x:Class="HueShift.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HueShift"
        mc:Ignorable="d"
        Title="HueShift" Height="450" Width="800"
        Background="#FF1E1E1E">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <!-- 入力エリア -->
            <RowDefinition Height="Auto"/>
            <!-- 元の色表示 -->
            <RowDefinition Height="Auto"/>
            <!-- 余白 -->
            <RowDefinition Height="10"/>
            <!-- 結果の3色 -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 入力エリア -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="元の色コードを入力してください (例: #FF0000 または 255,0,0)"
                       Margin="0,0,0,6"
                       Foreground="White"
                       FontSize="14"/>
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="InputColorTextBox"
                         Width="260"
                         Text="#1E90FF"
                         Margin="0,0,10,0"
                         Padding="4"
                         FontSize="14"/>
                <Button Content="計算"
                        Click="CalculateButton_Click"
                        Width="90"
                        Height="28"
                        Padding="4,0"
                        FontSize="14"/>
            </StackPanel>
        </StackPanel>

        <!-- 元の色 -->
        <GroupBox Grid.Row="1" Header="元の色" Margin="0,0,0,0"
                  Padding="8"
                  Foreground="White">
            <GroupBox.BorderBrush>
                <SolidColorBrush Color="#FFAAAAAA"/>
            </GroupBox.BorderBrush>
            <StackPanel Orientation="Horizontal">
                <Rectangle x:Name="OriginalColorRect"
                           Width="60" Height="60"
                           Fill="White"
                           Stroke="Black"
                           Margin="0,0,12,0"/>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock x:Name="OriginalColorHex"
                               Text="HEX: #FFFFFF"
                               Foreground="White"
                               FontSize="14"/>
                    <TextBlock x:Name="OriginalColorRgb"
                               Text="RGB: (255, 255, 255)"
                               Foreground="White"
                               FontSize="14"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>

        <!-- 結果: 補色 / 反転 / グレースケール -->
        <Grid Grid.Row="3" Margin="0,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 補色 -->
            <GroupBox Grid.Column="0"
                      Header="補色 (Complementary)"
                      Margin="0,0,8,0"
                      Padding="8"
                      Foreground="White">
                <GroupBox.BorderBrush>
                    <SolidColorBrush Color="#FFAAAAAA"/>
                </GroupBox.BorderBrush>
                <StackPanel>
                    <Rectangle x:Name="ComplementaryColorRect"
                               Width="60" Height="60"
                               Fill="White"
                               Stroke="Black"
                               Margin="0,0,0,6"
                               HorizontalAlignment="Left"/>
                    <TextBlock x:Name="ComplementaryColorHex"
                               Text="HEX: "
                               Foreground="White"
                               FontSize="14"/>
                    <TextBlock x:Name="ComplementaryColorRgb"
                               Text="RGB: "
                               Foreground="White"
                               FontSize="14"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </GroupBox>

            <!-- 反対色/反転色 -->
            <GroupBox Grid.Column="1"
                      Header="反対色 / 反転色 (Invert)"
                      Margin="4,0,4,0"
                      Padding="8"
                      Foreground="White">
                <GroupBox.BorderBrush>
                    <SolidColorBrush Color="#FFAAAAAA"/>
                </GroupBox.BorderBrush>
                <StackPanel>
                    <Rectangle x:Name="InvertColorRect"
                               Width="60" Height="60"
                               Fill="White"
                               Stroke="Black"
                               Margin="0,0,0,6"
                               HorizontalAlignment="Left"/>
                    <TextBlock x:Name="InvertColorHex"
                               Text="HEX: "
                               Foreground="White"
                               FontSize="14"/>
                    <TextBlock x:Name="InvertColorRgb"
                               Text="RGB: "
                               Foreground="White"
                               FontSize="14"
                               Margin="0,4,0,0"/>
                </StackPanel>
            </GroupBox>

            <!-- グレースケール -->
            <GroupBox Grid.Column="2"
                      Header="グレースケール (Grayscale)"
                      Margin="8,0,0,0"
                      Padding="8"
                      Foreground="White">
                <GroupBox.BorderBrush>
                    <SolidColorBrush Color="#FFAAAAAA"/>
                </GroupBox.BorderBrush>
                <StackPanel>
                    <Rectangle x:Name="GrayscaleColorRect"
                               Width="60" Height="60"
                               Fill="White"
                               Stroke="Black"
                               Margin="0,0,0,6"
                               HorizontalAlignment="Left"/>
                    <StackPanel>
                        <TextBlock x:Name="GrayscaleColorHex"
                                   Text="HEX: "
                                   Foreground="White"
                                   FontSize="14"/>
                        <TextBlock x:Name="GrayscaleColorRgb"
                                   Text="RGB: "
                                   Foreground="White"
                                   FontSize="14"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
        </Grid>
    </Grid>
</Window>
